{
  "name": "Music Beta Play/Pause controller",
  "version": "1.0.2",

  "icons": {
    "16": "logo-16x16.png",
    "48": "logo-48x48.png",
    "128": "logo-128x128.png"
  },
  "browser_action": {
    "name": "Play/Pause",
    "default_icon": "logo-19x19.ico",
    "default_title": "Music Beta Play/Pause controller"
  },
  "omnibox": { "keyword" : "mc" },
  "background_page": "background.html",
  "content_scripts": [
    {
      "matches": ["*://music.google.com/*"],
      "js": ["play_state_notifier.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs",
    "*://music.google.com/*"
  ]
}
